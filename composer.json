{
    "name": "spinyman/payum-braintree",
    "type": "library",
    "description": "A Payum extension for Braintree gateway integration",
    "keywords": ["payment", "braintree", "payum"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Busel",
            "email": "andrew.busel@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "payum/core": "^1.6.0",
        "braintree/braintree_php": "^5.1.0"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^2.0.1",
        "phpunit/phpunit": "^7.5.0|^8.5.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { 
            "Payum\\Braintree\\": "src" 
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    }
}
